<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/lodingdetailSpinner"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"

            app:SpinKit_Color="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/topBookLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bookThumbnailImgView"
                            android:layout_width="128dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp">


                            <TextView
                                android:id="@+id/bookTitleTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="@android:color/primary_text_light"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="monospace" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bookTitleTxtView"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Author : "
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/authorWithTitleTxtView"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:typeface="monospace" />
                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/color_view_line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif"
                        android:text="About this edition"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/color_view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Published : "
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/datePublishedTextView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Page count : "
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/pageCountTxtView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Print Type : "
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/printTypeTxtView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Publisher :"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/publisherTextView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Sale Info : "
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/saleInfoTxtView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:text="Pdf :"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                                <TextView
                                    android:id="@+id/PdfTextView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@android:color/primary_text_light_nodisable"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Description"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/color_view_line" />

                    <TextView
                        android:id="@+id/bookDescriptionTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:text="gfdgf"
                        android:autoLink="web"
                        android:textColorLink="@color/colorAccent"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="13sp"
                        android:typeface="monospace" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/viewSampleBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2.5dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:background="@drawable/text_view_border"
                    android:text="View book"
                    android:textColor="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buyBookBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_view_border"
                    android:elevation="10dp"
                    android:text="Buy Book"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>