<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/topBookLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bookThumbnailImgView"
                android:layout_width="128dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <LinearLayout
                    android:id="@+id/linearDetaildateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"

                    android:layout_alignParentTop="true"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="published : "
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/datePublishedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="1-02-2021"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textSize="10sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/bookTitleTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="fhfgdfgfg"
                    android:layout_below="@+id/linearDetaildateLayout"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bookAutherTxtView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:layout_below="@+id/bookTitleTxtView"
                    android:text="gf"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="10sp" />
            </RelativeLayout>


        </LinearLayout>
        <View

            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/color_view_line"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/bookDescriptionTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="textStart"

            android:text=""
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />
    </LinearLayout>

</ScrollView>